<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#fafafa"
  tools:context=".FlightDetailActivity">
  <android.support.v7.widget.CardView
    android:id="@+id/flightDetailContainer"
    android:layout_width="345dp"
    android:layout_height="570dp"
    app:cardCornerRadius="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <android.support.v7.widget.CardView
      android:id="@+id/flightDetailCardView"
      android:layout_width="match_parent"
      android:layout_height="215dp"
      app:cardBackgroundColor="#0048b7">
      <TextView
        android:id="@+id/arrivalTimeTV"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="218dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/sfpro_display_regular"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:lineHeight="24dp"/>
      <TextView
        android:id="@+id/toCityTV"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="112dp"
        android:layout_marginStart="226dp"
        android:layout_marginEnd="32dp"
        android:alpha="0.7"
        android:fontFamily="@font/sfpro_display_regular"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        app:lineHeight="14dp"/>
      <TextView
        android:id="@+id/toAirportTV"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="131dp"
        android:layout_marginStart="233dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/sfpro_display_bold"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:lineHeight="40dp"/>
      <TextView
        android:id="@+id/fromAirportTV"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="131dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sfpro_display_bold"
        android:textAlignment="viewStart"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:lineHeight="40dp"/>
      <TextView
        android:id="@+id/fromCityTV"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="112dp"
        android:layout_marginStart="32dp"
        android:alpha="0.7"
        android:fontFamily="@font/sfpro_display_regular"
        android:textColor="#ffffff"
        app:lineHeight="14dp"/>
      <TextView
        android:id="@+id/departureTimeTV"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginTop="127dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sfpro_display_regular"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:lineHeight="24dp"/>
      <ImageView
        android:id="@+id/flightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="138dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:src="@drawable/ic_flight_icon1_5x"/>
    </android.support.v7.widget.CardView>
    <TextView
      android:id="@+id/AirflightCodeTV"
      android:layout_width="52dp"
      android:layout_height="20dp"
      android:layout_marginTop="256dp"
      android:layout_marginBottom="298dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="261dp"
      android:fontFamily="@font/sfpro_display_regular"
      android:text="Flight :"
      android:textAlignment="textStart"
      android:textColor="#000000"
      android:textSize="16dp"/>
    <TextView
      android:id="@+id/TerminalTV"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_marginTop="307dp"
      android:layout_marginBottom="247dp"
      android:layout_marginStart="32dp"
      android:fontFamily="@font/sfpro_display_regular"
      android:text="Terminal :"
      android:textAlignment="textStart"
      android:textColor="#000000"
      android:textSize="16dp"/>
    <TextView
      android:id="@+id/GateTV"
      android:layout_width="45dp"
      android:layout_height="20dp"
      android:layout_marginTop="256dp"
      android:layout_marginBottom="298dp"
      android:layout_marginStart="231dp"
      android:layout_marginEnd="69dp"
      android:fontFamily="@font/sfpro_display_regular"
      android:text="Gate :"
      android:textAlignment="textEnd"
      android:textColor="#000000"
      android:textSize="16dp"/>
    <TextView
      android:id="@+id/SeatTV"
      android:layout_width="44dp"
      android:layout_height="20dp"
      android:layout_marginTop="307dp"
      android:layout_marginBottom="298dp"
      android:layout_marginStart="228dp"
      android:layout_marginEnd="261dp"
      android:fontFamily="@font/sfpro_display_regular"
      android:text="Seat :"
      android:textAlignment="textEnd"
      android:textColor="#000000"
      android:textSize="16dp"/>
    <TextView
      android:id="@+id/airFlightCodeTV"
      android:layout_width="50dp"
      android:layout_height="20dp"
      android:layout_marginTop="256dp"
      android:layout_marginStart="91dp"
      android:fontFamily="@font/sfpro_display_medium"
      android:textAlignment="textStart"
      android:textColor="#0048b7"
      android:textSize="16sp"/>
    <TextView
      android:id="@+id/terminalTV"
      android:layout_width="12dp"
      android:layout_height="20dp"
      android:layout_marginTop="307dp"
      android:layout_marginStart="113dp"
      android:fontFamily="@font/sfpro_display_medium"
      android:text="D"
      android:textAlignment="textStart"
      android:textColor="#0048b7"
      android:textSize="16sp"/>
    <TextView
      android:id="@+id/gateTV"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="256dp"
      android:layout_marginStart="293dp"
      android:layout_marginEnd="32dp"
      android:fontFamily="@font/sfpro_display_medium"
      android:text="--"
      android:textAlignment="textEnd"
      android:textColor="#0048b7"
      android:textSize="16sp"/>
    <TextView
      android:id="@+id/seatTV"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="307dp"
      android:layout_marginStart="293dp"
      android:layout_marginEnd="32dp"
      android:fontFamily="@font/sfpro_display_medium"
      android:text="--"
      android:textAlignment="textEnd"
      android:textColor="#0048b7"
      android:textSize="16sp"
      app:lineHeight="16dp"/>
    <ImageView
      android:id="@+id/qrCode"
      android:layout_width="110dp"
      android:layout_height="110dp"
      android:layout_marginTop="412dp"
      android:layout_marginStart="118dp"
      app:srcCompat="@drawable/qr_code"/>
    <ImageView
      android:id="@+id/rightCircle"
      android:layout_width="40dp"
      android:layout_height="39dp"
      android:layout_marginTop="346dp"
      android:layout_marginStart="327dp"
      app:srcCompat="@drawable/gray_circle"/>
    <ImageView
      android:id="@+id/rightCircle3"
      android:layout_width="40dp"
      android:layout_height="39dp"
      android:layout_marginTop="346dp"
      android:layout_marginStart="-20dp"
      app:srcCompat="@drawable/gray_circle"/>
    <ImageView
      android:id="@+id/imageView7"
      android:layout_width="305dp"
      android:layout_height="5dp"
      android:layout_marginTop="365dp"
      android:layout_marginStart="24dp"
      app:srcCompat="@drawable/dotted_line"/>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>